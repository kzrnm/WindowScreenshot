<Window x:Class="Kzrnm.WindowScreenshot.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Kzrnm.WindowScreenshot.ViewModels"
    xmlns:ws="https://github.com/kzrnm/WindowScreenshot"
    Title="WindowScreenshot"
    Width="600"
    Height="200"
    MinWidth="360"
    MinHeight="120"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    ws:IocBehavior.AutoViewModel="{x:Type vm:MainWindowViewModel}"
    d:DesignHeight="200"
    d:DesignWidth="400"
    Background="AliceBlue"
    mc:Ignorable="d">
    <ws:WindowCapturer
        AlwaysImageArea="False"
        ImageWidth="65"
        ListHeight="70">
        <StackPanel 
            Background="IndianRed">
            <Button Command="{Binding AddCommand}" Content="ダミー画像" />
            <Button Command="{Binding ClearCommand}" Content="クリア" />
            <TextBlock Text="hoge" />
        </StackPanel>
    </ws:WindowCapturer>
</Window>
