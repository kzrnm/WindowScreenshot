<Window x:Class="Kzrnm.WindowScreenshot.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Kzrnm.WindowScreenshot.ViewModels"
    xmlns:ktk="urn:kzrnm-wpf/toolkit"
    xmlns:kw="urn:kzrnm-wpf-window-screenshot/core"
    xmlns:ws="urn:kzrnm-wpf-window-screenshot"
    Title="WindowScreenshot"
    Width="600"
    Height="200"
    MinWidth="360"
    MinHeight="120"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    ktk:IocBehavior.AutoViewModel="{x:Type vm:MainWindowViewModel}"
    d:DesignHeight="200"
    d:DesignWidth="400"
    Background="AliceBlue"
    mc:Ignorable="d">
    <b:Interaction.Behaviors>
        <kw:FontDialogBehavior />
    </b:Interaction.Behaviors>
    <ws:WindowCapturer
        AlwaysImageArea="False"
        ImageWidth="65"
        ListHeight="70">
        <StackPanel Background="WhiteSmoke">
            <Button Command="{Binding AddCommand}" Content="ダミー画像" />
            <Button Command="{Binding ClearCommand}" Content="クリア" />
            <TextBlock Text="hoge" />
            <Button Content="フォント" Click="Button_Click" />
        </StackPanel>
    </ws:WindowCapturer>
</Window>
