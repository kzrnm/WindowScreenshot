<Window x:Class="Kzrnm.WindowScreenshot.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Kzrnm.WindowScreenshot.Views"
    xmlns:vm="clr-namespace:Kzrnm.WindowScreenshot.ViewModels"
    xmlns:ws="urn:kzrnm-wpf-window-screenshot"
    Title="WindowScreenshot"
    Width="600"
    Height="200"
    MinWidth="360"
    MinHeight="120"
    d:DesignHeight="200"
    d:DesignWidth="400"
    Background="AliceBlue"
    mc:Ignorable="d">
    <ws:WindowCapturer
        d:ImageVisibility="Collapsed"
        AlwaysImageArea="False"
        ImageWidth="65"
        ListHeight="70">
        <local:MainBody  Background="WhiteSmoke" />
    </ws:WindowCapturer>
</Window>
